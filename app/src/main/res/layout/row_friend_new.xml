<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:gravity="center"
    android:background="@drawable/custom_border_leaderboard"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leaderboardPosition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="26sp"
            android:text="1."
            android:textStyle="bold"
            android:minWidth="40dp"
            android:minHeight="40dp"/>
        <TextView
            android:id="@+id/leaderboardCustomName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="26sp"
            android:text="Name(max8)"
            android:textStyle="bold"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/removeFriend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:minWidth="96dp"
            android:minHeight="40dp"
            android:src="@drawable/remove_icon"
            android:textAlignment="center"
            android:textStyle="bold"
            app:tint="@android:color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/leaderboardRTIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:src="@drawable/reaction_time_icon"
        android:minWidth="40dp"
        android:minHeight="40dp"
        app:tint="@color/black" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:text="avg: "
        android:minWidth="40dp"
        android:minHeight="40dp" />
        <TextView
            android:id="@+id/leaderboardRTAvg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="305 ms"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="best: "
            android:minWidth="40dp"
            android:minHeight="40dp" />
    <TextView
        android:id="@+id/leaderboardRTBest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_marginStart="4dp"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="275 ms"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/leaderboardDAIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:src="@drawable/delay_ability_icon"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="avg: "
            android:minWidth="40dp"
            android:minHeight="40dp" />
        <TextView
            android:id="@+id/leaderboardDAAvg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="305 ms"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="best: "
            android:minWidth="40dp"
            android:minHeight="40dp" />
        <TextView
            android:id="@+id/leaderboardDABest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="275 ms"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/leaderboardSCIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:src="@drawable/switch_cost_icon"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="avg: "
            android:minWidth="40dp"
            android:minHeight="40dp" />
        <TextView
            android:id="@+id/leaderboardSCAvg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="305 ms"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:text="best: "
            android:minWidth="40dp"
            android:minHeight="40dp" />
        <TextView
            android:id="@+id/leaderboardSCBest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="275 ms"/>



    </LinearLayout>

</LinearLayout>