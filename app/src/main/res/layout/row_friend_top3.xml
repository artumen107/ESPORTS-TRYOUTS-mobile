<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/bronze_trophy_icon"
        android:minWidth="55dp"
        android:minHeight="55dp">
    </ImageView>

    <TextView
        android:id="@+id/leaderboardCustomName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:text="adcadcac"/>
    <TextView
        android:id="@+id/leaderboardPoints"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:text="2755 ms"
        android:layout_margin="1dp"
        android:background="@drawable/time_background_bronze"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/removeFriend"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:contentDescription="TODO"
        android:minWidth="48dp"
        android:src="@drawable/remove_icon"
        android:textAlignment="center"
        android:textStyle="bold" />



</LinearLayout>